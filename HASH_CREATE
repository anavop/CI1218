CREATE INDEX idx_exemplo_hash ON tabela USING hash (coluna);


CREATE INDEX NATION_INDEX_HASH ON Nation USING hash(N_NATIONKEY);
CREATE INDEX REGION_INDEX_HASH ON REGION USING hash(R_REGIONKEY);
CREATE INDEX CUSTOMER_INDEX_HASH ON CUSTOMER USING hash(C_CUSTKEY);
CREATE INDEX PART_INDEX_HASH ON PART USING hash(P_PARTKEY);
CREATE INDEX SUPPLIER_INDEX_HASH ON SUPPLIER USING hash(S_SUPPKEY);
CREATE INDEX PARTSUPP_INDEX_HASH ON PARTSUPP USING hash(PS_PARTKEY);
CREATE INDEX ORDERS_INDEX_HASH ON ORDERS USING hash(O_ORDERKEY);
CREATE INDEX LINEITEM_INDEX_HASH ON LINEITEM USING hash(L_ORDERKEY);

